---
import Layout from '../components/Layout.astro';
import App from '../components/App.tsx';
---

<Layout title="404 - Page Not Found">
  <!-- Check if this is a client-side route that React Router should handle -->
  <script>
    // If URL contains /project/ and we're running client-side, load the React app
    if (typeof window !== 'undefined' && window.location.pathname.startsWith('/project/')) {
      // Hide the 404 content and load the React app instead
      document.addEventListener('DOMContentLoaded', function() {
        const errorContainer = document.querySelector('.error-container');
        const appContainer = document.querySelector('.react-app-container');
        if (errorContainer && appContainer) {
          errorContainer.style.display = 'none';
          appContainer.style.display = 'block';
        }
      });
    }
  </script>
  
  <div class="error-container">
    <div class="error-content">
      <h1>404</h1>
      <p>Page not found</p>
      <a href="/" class="back-link">‚Üê Back to home</a>
    </div>
  </div>
  
  <!-- React app container for client-side routing fallback -->
  <div class="react-app-container" style="display: none;">
    <App client:only="react" />
  </div>
</Layout>

<style>
  .error-container {
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 60vh;
  }

  .error-content {
    text-align: center;
  }

  .error-content h1 {
    font-size: 48px;
    font-weight: bold;
    margin-bottom: 8px;
    color: var(--text-color);
  }

  .error-content p {
    font-size: 14px;
    font-weight: bold;
    margin-bottom: 24px;
    color: var(--text-color);
  }

  .back-link {
    display: inline-block;
    font-size: 14px;
    font-weight: bold;
    color: var(--text-color);
    text-decoration: none;
    padding: 8px 16px;
    border: 1px solid var(--border-color);
    background: var(--bg-color);
    transition: background-color 0.2s ease, border-color 0.2s ease;
  }

  .back-link:hover {
    background: var(--hover-bg);
    border-color: var(--text-color);
  }
</style>