# Claude API Configuration

# Server Configuration
PORT=3000
NODE_ENV=development
LOG_LEVEL=info

# Claude Projects Path
# Path to the directory containing Claude Code projects
CLAUDE_PROJECTS_PATH=/home/user/.claude/projects

# CORS Configuration
CORS_ORIGIN=*

# Rate Limiting
RATE_LIMIT=1000

# Security
# Set to true to enable additional security headers
ENABLE_HELMET=true

# Performance
# Enable response compression
ENABLE_COMPRESSION=true

# Logging
# Directory for log files (relative to project root)
LOG_DIR=logs

# Development
# Enable verbose logging and additional debugging
DEBUG=false
VERBOSE=false