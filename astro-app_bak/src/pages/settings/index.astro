---
const currentWorkspacePath = process.env.WORKSPACE_PATH || '/home/alex/code';
---

<html lang="en" data-theme="light">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Claude UI - Settings</title>
    <link rel="stylesheet" href="/src/styles/global.css" />
    <link rel="stylesheet" href="/src/styles/themes.css" />
    <script src="/src/scripts/theme.js"></script>
    <style>
      body {
        margin: 0;
        padding: 0;
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        background: var(--color-bg);
        color: var(--color-text);
      }
      
      .container {
        max-width: 600px;
        margin: 0 auto;
        padding: 1rem 16px;
      }
      
      .header {
        border-bottom: 1px solid var(--color-border);
        padding-bottom: 0.5rem;
        margin-bottom: 1rem;
      }
      
      .header h1 {
        margin: 0;
        font-size: 1.5rem;
        font-weight: 600;
      }
      
      .back-link {
        color: var(--color-text);
        text-decoration: none;
        font-size: 0.9rem;
        margin-bottom: 0.5rem;
        display: inline-block;
      }
      
      .back-link:hover {
        text-decoration: underline;
      }
      
      .setting-group {
        margin-bottom: 1rem;
        padding: 1rem;
        border: 1px solid var(--color-border);
      }
      
      .setting-label {
        font-weight: 600;
        font-size: 1rem;
        margin-bottom: 0.375rem;
        display: block;
      }
      
      .setting-description {
        color: var(--color-secondary-text);
        font-size: 0.85rem;
        margin-bottom: 0.75rem;
      }
      
      .setting-input {
        width: 100%;
        padding: 0.5rem;
        border: 1px solid var(--color-border);
        background: var(--color-bg);
        color: var(--color-text);
        font-size: 0.9rem;
        font-family: monospace;
        box-sizing: border-box;
      }
      
      .setting-input:focus {
        outline: none;
        background: var(--color-hover-bg);
      }
      
      .save-button {
        background: var(--color-text);
        color: var(--color-bg);
        border: none;
        padding: 0.75rem 1.5rem;
        font-size: 0.9rem;
        cursor: pointer;
        margin-top: 0.75rem;
      }
      
      .save-button:hover {
        background: var(--color-secondary-text);
      }
      
      .current-value {
        font-family: monospace;
        background: var(--color-muted-bg);
        padding: 0.375rem 0.5rem;
        border-left: 2px solid var(--color-border);
        margin-bottom: 0.75rem;
        font-size: 0.8rem;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <a href="/make" class="back-link">‚Üê Back to Dashboard</a>
      
      <div class="header">
        <h1>Settings</h1>
      </div>
      
      <div class="setting-group">
        <label class="setting-label">Workspace Path</label>
        <div class="setting-description">
          Directory where your projects are located. This path will be scanned for projects on the dashboard.
        </div>
        <div class="current-value">
          Current: {currentWorkspacePath}
        </div>
        <input 
          type="text" 
          class="setting-input"
          value={currentWorkspacePath}
          placeholder="/path/to/your/workspace"
        />
        <button class="save-button">Save Settings</button>
      </div>
      
      <script>
        // Note: This is a placeholder for client-side functionality
        // In a real implementation, you'd want to handle form submission
        // and persist settings to a config file or environment variables
        document.querySelector('.save-button').addEventListener('click', () => {
          alert('Settings functionality not yet implemented. Please set WORKSPACE_PATH environment variable manually.');
        });
      </script>
    </div>
  </body>
</html>